<h1><%= @album.title %></h1>

<%= button_to "Edit Album", edit_album_url(@album), method: :get %>
<%= button_to "Delete Album", album_url(@album), method: :delete %>

<br>

<h3>Album info:</h3>
<ul>
  <li>Recording Artist: <%= @album.band.name %></li>
  <li>Album Type: <%= @album.album_type %></li>
</ul>

<h3>Track list:</h3>
<ul>
  <% @album.tracks.each do |track| %>
  <%= render 'tracks/track', track: track %>
  <% end %>
</ul>

<%= button_to "Add track", new_album_track_url(@album), method: :get %>
<br><br>

<%= link_to "Back to #{@album.band.name}", band_url(@album.band) %>
